import java.util.Scanner;
public class Triangle
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	   	System.out.print("Enter the number of Rows:");
	    int rows = sc.nextInt();
	    rightTriangle(rows);
		
	}
	static void rightTriangle(int row){
	    for(int i=0;i<=row;i++){
	        for(int j=0;j<=i-1;j++){
	            System.out.print("* ");
	        }
	        System.out.println();
	    }
	}
}
